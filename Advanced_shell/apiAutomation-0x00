#!/bin/bash
# Fetch Pikachu data from the PokÃ©mon API and save to data.json
# Log errors to errors.txt if request fails

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request and capture HTTP status code
HTTP_STATUS=$(curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL")

# Check if status code is 200 (success)
if [ "$HTTP_STATUS" -ne 200 ]; then
    echo "Error: Failed to fetch data for Pikachu (HTTP $HTTP_STATUS)" >> "$ERROR_FILE"
    rm -f "$OUTPUT_FILE" # remove incomplete file
    exit 1
fi

echo "Pikachu data saved to $OUTPUT_FILE"
