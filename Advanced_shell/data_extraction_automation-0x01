#!/bin/bash
# Extract Pikachu's name, type, weight, and height from data.json
# data.json must exist from Task 0

JSON_FILE="data.json"

# Extract values using jq
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq -r '.height' "$JSON_FILE")
weight=$(jq -r '.weight' "$JSON_FILE")
type=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')

# Convert weight (hectograms to kg) and height (decimeters to meters)
weight_kg=$(awk "BEGIN {printf \"%.0f\", $weight/10}")
height_m=$(awk "BEGIN {printf \"%.1f\", $height/10}")

# Output in human-readable format
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
