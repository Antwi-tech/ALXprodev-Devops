#!/bin/bash
# Generate a PokÃ©mon CSV report with average height and weight

DATA_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

# Check if data directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "Error: $DATA_DIR directory not found. Please run batchProcessing-0x02 first."
    exit 1
fi

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through JSON files and extract details
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height_dm=$(jq -r '.height' "$file")
    weight_hg=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm/10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg/10}")

    echo "$name,$height_m,$weight_kg" >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo ""
cat "$CSV_FILE"

# Calculate averages using awk
awk -F, 'NR>1 {total_h+=$2; total_w+=$3; count++}
END {
    printf "\nAverage Height: %.2f m\n", total_h/count
    printf "Average Weight: %.2f kg\n", total_w/count
}' "$CSV_FILE"
